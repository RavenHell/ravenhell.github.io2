/**
 * Syntax highlighting styles
 */
.highlight {
    background: #fff;
    @extend %vertical-rhythm;

    .c     { color: #8e908c; font-style: italic } // Comment
    .err   { color: #c82829; background-color: #e3d2d2 } // Error
    .k     { font-weight: regular } // Keyword
    .o     { font-weight: regular } // Operator
    .cm    { color: #8e908c; font-style: italic } // Comment.Multiline
    .cp    { color: #8e908c; font-weight: regular } // Comment.Preproc
    .c1    { color: #8e908c; font-style: italic } // Comment.Single
    .cs    { color: #8e908c; font-weight: regular; font-style: italic } // Comment.Special
    .gd    { color: #c82829; background-color: #fdd } // Generic.Deleted
    .gd .x { color: #c82829; background-color: #faa } // Generic.Deleted.Specific
    .ge    { font-style: italic } // Generic.Emph
    .gr    { color: #a00 } // Generic.Error
    .gh    { color: #4d4d4c } // Generic.Heading
    .gi    { color: #46ad55; background-color: #dfd } // Generic.Inserted
    .gi .x { color: #46ad55; background-color: #afa } // Generic.Inserted.Specific
    .go    { color: #888 } // Generic.Output
    .gp    { color: #8e908c } // Generic.Prompt
    .gs    { font-weight: bold } // Generic.Strong
    .gu    { color: #51bac8 } // Generic.Subheading
    .gt    { color: #a00 } // Generic.Traceback
    .kc    { color: #b168cd; font-weight: regular } // Keyword.Constant
    .kd    { color: #b168cd; font-weight: regular } // Keyword.Declaration
    .kp    { color: #b168cd; font-weight: regular } // Keyword.Pseudo
    .kr    { color: #b168cd; font-weight: regular } // Keyword.Reserved
    .kt    { color: #deb328; font-weight: regular } // Keyword.Type
    .m     { color: #d35c5c } // Literal.Number
    .s     { color: #46ad55 } // Literal.String
    .na    { color: #256fb9 } // Name.Attribute
    .nb    { color: #4d4d4c } // Name.Builtin
    .nc    { color: #deb328; font-weight: regular } // Name.Class
    .no    { color: #d35c5c } // Name.Constant
    .nd    { color: #51bac8 }
    .ni    { color: #4d4d4c } // Name.Entity
    .ne    { color: #c82829; font-weight: regular } // Name.Exception
    .nf    { color: #256fb9; font-weight: regular } // Name.Function
    .nn    { color: #deb328 } // Name.Namespace
    .nt    { color: #51bac8 } // Name.Tag
    .nv    { color: #c82829 } // Name.Variable
    .ow    { color: #51bac8; font-weight: regular } // Operator.Word
    .w     { color: #4d4d4c } // Text.Whitespace
    .mf    { color: #d35c5c } // Literal.Number.Float
    .mh    { color: #d35c5c } // Literal.Number.Hex
    .mi    { color: #d35c5c } // Literal.Number.Integer
    .mo    { color: #d35c5c } // Literal.Number.Oct
    .sb    { color: #46ad55 } // Literal.String.Backtick
    .sc    { color: #4d4d4c } // Literal.String.Char
    .sd    { color: #8e908c } // Literal.String.Doc
    .s2    { color: #46ad55 } // Literal.String.Double
    .se    { color: #d35c5c } // Literal.String.Escape
    .sh    { color: #46ad55 } // Literal.String.Heredoc
    .si    { color: #d35c5c } // Literal.String.Interpol
    .sx    { color: #46ad55 } // Literal.String.Other
    .sr    { color: #46ad55 } // Literal.String.Regex
    .s1    { color: #46ad55 } // Literal.String.Single
    .ss    { color: #46ad55 } // Literal.String.Symbol
    .bp    { color: #4d4d4c } // Name.Builtin.Pseudo
    .vc    { color: #c82829 } // Name.Variable.Class
    .vg    { color: #c82829 } // Name.Variable.Global
    .vi    { color: #c82829 } // Name.Variable.Instance
    .il    { color: #d35c5c } // Literal.Number.Integer.Long
}
